{
	"name": "webapp",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"copy:assets": "npx cpx2 \"../assets/flags/**/*\" static/flags -C && npx cpx2 \"../assets/logo/logo-vector.svg\" static/logo -C && npx cpx2 \"../assets/logo/logo-vector.svg\" static/favicon.svg",
		"clean": "rimraf .svelte-kit build",
		"dev": "npm-run-all -p copy:assets vite:dev",
		"vite:dev": "vite dev --force",
		"build": "npm run copy:assets && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint ."
	},
	"dependencies": {
		"shared": "*"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-cloudflare": "^4.6.1",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.10",
		"cpx2": "^4.2.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	}
}
