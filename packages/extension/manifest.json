{
  "manifest_version": 3,
  "name": "DollarNow",
  "description": "Displays real-time exchange rates against the US Dollar directly in your browser toolbar.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "alarms",
    "offscreen"
  ],
  "host_permissions": [
    "https://dollarnow.21m.workers.dev/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/dollarnow-icon-16.png",
      "32": "icons/dollarnow-icon-32.png",
      "48": "icons/dollarnow-icon-48.png",
      "128": "icons/dollarnow-icon-128.png"
    },
    "default_title": "DollarNow"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://dollarnow.pages.dev/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/dollarnow-icon-16.png",
    "32": "icons/dollarnow-icon-32.png",
    "48": "icons/dollarnow-icon-48.png",
    "128": "icons/dollarnow-icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "format.html",
        "offscreen.html",
        "sounds/*",
        "alert.html",
        "fonts/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
